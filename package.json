{
  "private": true,
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && npm run compile && electron ./app",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build",
    "release": "npm run compile && build"
  },
  "build": {
    "appId": "net.timothyjenkins.tellyprompt",
    "productName": "TellyPrompt",
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "iconUrl": "build/icon.ico",
      "remoteReleases": "https://github.com/akastormseeker/tellyprompt",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": null,
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "electron-builder": "next",
    "electron": "1.4.1"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "electron-window-state": "^3.0.4",
    "jquery": "^3.1.1",
    "ws": "^1.1.1"
  }
}
